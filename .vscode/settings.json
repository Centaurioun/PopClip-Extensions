{
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
        "*.popclipextz": true
    },
    "standard.validate": [
        "typescript"
    ],
    "standard.engine": "ts-standard",
    "typescript.inlayHints.parameterNames.enabled": "none",
    "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
    "typescript.preferences.quoteStyle": "single",
    "json.schemas": [
        {
            "fileMatch": [
                "Config.json"
            ],
            "url": "./ExtensionSchema.json"
        }
    ],
    "cSpell.words": [
        "applescript",
        "authsecret",
        "centimetres",
        "deduped",
        "downcased",
        "Evernote",
        "hashbang",
        "keychain",
        "kilometres",
        "Localizable",
        "markdownified",
        "monospaced",
        "pilotmoon",
        "plists",
        "popclip",
        "popclipext",
        "popclipextz",
        "regexes",
        "runtimes",
        "scpt",
        "Setapp",
        "Terpstra's",
        "typedoc",
        "unsanitized",
        "upcase",
        "upcased"
    ],
    "cSpell.ignoreWords": [
        "speechicon",
        "myextension",
        "myscript"
    ]
    
}